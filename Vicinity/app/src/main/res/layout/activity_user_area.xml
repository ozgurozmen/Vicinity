<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs562OSU.vicinity.UserAreaActivity"
    android:background="#dfe3ee"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74sp"
        android:orientation="horizontal"
        android:background="#000000"

        android:id="@+id/linearLayout">



        <ImageView
            android:scaleType="centerInside"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/user"
            android:background="#8b9dc3"
            android:layout_gravity="center"
            android:id="@+id/userImage"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textColor="#FFFFFF"
                android:id="@+id/tvWelcomeMsg"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="10sp"
                android:textSize="25sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/editTextLocation"
                android:textSize="20sp"
                />


        </LinearLayout>

    </LinearLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C34500"
            android:textColor="#EEEEEE"
            android:layout_gravity="center"
            android:text="Rate"
            android:id="@+id/btnRate"
            android:textSize="26sp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_below="@+id/btnRate"
        android:id="@+id/linearLayout3">
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C34500"
        android:textColor="#EEEEEE"
        android:layout_gravity="center"
        android:text="Refresh"
        android:textSize="26sp"
        android:id="@+id/btnLocation"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANNOUNCEMENTS"
        android:padding="5sp"
        android:gravity="center"
        android:textColor="#003B5C"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="10sp"
        android:textSize="18sp"
        android:id="@+id/etAnnounceHeader"
        android:layout_below="@+id/btnLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        /> -->
    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/btnLocation"
        android:layout_above="@+id/linearLayout2"
        android:fillViewport="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLocation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/linearLayout2"
            android:id="@+id/messages"
            android:gravity="fill_horizontal">


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:background="#C34500"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:textSize="26sp"
            android:text="New Announcement"
            android:id="@+id/btnNewAnnoucement" />


    </LinearLayout>



</RelativeLayout>

